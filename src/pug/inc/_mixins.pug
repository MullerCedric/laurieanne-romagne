                                a( href="https://www.instagram.com/laurieanneromagnephotographie/" title="Vers ma page instagram" class="c-footer__social c-footer__social--insta" )
                                    span( class="hidden@lap" ) laurieanneromagnephotographie
                            li( class="c-footer__item c-footer__social-item" )
                                a( href="mailto:info@laurieanne-romagne.com" title="M'envoyer un e-mail" class="c-footer__social c-footer__social--mail" )
                                    span( class="hidden@lap" ) info@laurieanne-romagne.com
    script( src="./assets/js/lr-scripts.js" )